{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "owner_wallet": { "type": "string", "unique": true },
        "trait_body_id": { "type": "integer" },
        "trait_skin_id": { "type": "integer" },
        "trait_face_id": { "type": "integer" },
        "trait_head_id": { "type": "integer" },
        "penguin_name": { "type": "string" },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "default": "now()"
        },
        "user_id": { "type": "string", "format": "uuid", "unique": true }
      },
      "required": ["email", "penguin_name"],
      "additionalProperties": false
    }
  }
}
